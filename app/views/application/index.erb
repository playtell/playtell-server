<% content_for :head do %>	

	<script type="text/javascript">
	  	$(document).ready(function() {

		    //code to be used for scrolling page for nav links 
		    $("#jump").click(function (event) {	
				$(".mainContainer").animate(
					{ scrollTop: 100 }, "slow", "easeOutBack" );
				event.preventDefault();
				return false;
			});
		  });
	
		//size the splash image to the window height
		$(function () {
		  var h = $(window).height();
		  $('#block-splash').height(h);
	
		  var img = new Image();
		  $(img)
		    .load(function () {
		      $(this).hide();
			  $(this).appendTo('#block-splash');
		      $(this).show();
		    })

		    .error(function () {
		      // notify the user that the image could not be loaded
		    })

		    .attr('src', '/images/splash_ipad.png')
		    .attr('style', 'height: ' + h + 'px');
		});	
		
		//early access
		$('#early-access-submit').live("click", function() {
			$('#sign-up-form').hide();
			$('#loader').show();
			$.ajax({
				url: "/early_access.js",
				data: "email=" + $('#email').val(),
				type: "POST",
				success: function() {
					$('#loader').hide();
					$('#thank-you').show();
				}
			});		
		});
	
	 </script>
	
<% end %>

