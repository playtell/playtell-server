<% content_for :head do %>	

<script type="text/javascript">

	//size the splash image to the window height
$(document).ready(function() {
//	$('img#ribbons').load(function() {
			
		var h, winW, imgPos;
		
		if (screen.width < 767) {
			w = $(document).width() * 1.8;
			h = $(document).height() * .9;
			
			$('#block-splash').css({'min-height' : h});
			$('#block-splash img').css({'min-height' : h});
			$('#block-splash img').css({'min-width' : w});
			winW = screen.width;
		}
		else if ($(document).width() > 767) {
			h = $(document).height();
			$('#block-splash').css({'min-height' : h});
			$('#block-splash img').css({'min-height' : h});
			winW = $(document).width();
		}
		
		var imgW = $('img#slide_1').width();
		imgPos = (winW - imgW) / 3.25;
	
		$('#block-splash img').offset( { top: 0, left: imgPos } );
		show('ribbons');
		show('slide_1');
		$('#bottom-row').removeClass("invisible");
		
		setTimeout(function() {
			show('slide_2');
			$('#slide_1').hide("slide", { direction: "left" }, 'slow');
			}, 4000);
		setTimeout(function() {
			show('slide_3');
			$('#slide_2').hide("slide", { direction: "left" }, 'slow');
			}, 8000);
			
//	});
});

</script>

<% end %>	
	<div class="splash-container">
		<div id="block-splash" class="center">
			<%= image_tag "http://playtell.s3.amazonaws.com/HomePage/book.png", :class => "center hidden", :id => "slide_3" %>
			<%= image_tag "http://playtell.s3.amazonaws.com/HomePage/game.png", :class => "center hidden", :id => "slide_2" %>
			<%= image_tag "http://playtell.s3.amazonaws.com/HomePage/dialpad.png", :class => "center hidden", :id => "slide_1" %>
			<%= link_to image_tag("http://playtell.s3.amazonaws.com/HomePage/iPad-Ribbons.png", :class => "center hidden", :id => "ribbons"), 'http://itunes.apple.com/us/app/id570304295', :target => "_blank" %>
