<div class="homepage-content">
	<%= image_tag "ragatzi-logo.png", :alt => "Ragatzi" %><br>
	<h1>Play together,</h1>
	<h2>wherever you are.</h2>
	<%= link_to "Login", new_session_path %> ::
	<%= link_to "Want early access?", "#", :id => "early-access" %>
</div>	

<div class="lightbox hidden" id="early-access-lightbox">
	
	<div id="access-lightbox-content">
		<%= image_tag "mad_scientist.gif", :class => "fl" %>
		
		<div id="thank-you" class="hidden">
			<h2>Thanks! You're on the list.</h2> 
			<p class="mediumtext">We'll be in touch soon.</p> 
		</div>
		
		<div id="access-lightbox-text">
			<h2>We're still experimenting!</h2>
			<p class="mediumtext">
				But we'd love to let you into the lab early. 
			</p>
			<p class="mediumtext">
				Sign up to get early access, but be warned:&nbsp it might be a little messy.
			</p>
		</div>
			<%= form_for @earlyUser, :url => early_access_path, :remote => true do |f| %>
				<%= f.email_field :email %>
				<%= submit_tag "Sign me up!", :class => "blue", :id => "early-access-submit" %>
				<div id="loader" class="hidden loading"></div>
			<% end %>
	</div>
	
	<button class="close blue">X</button>
</div>

<script type="text/javascript">
	$(document).ready(function() {
		$('#early-access-submit')
			.click(function() {
				hide('early-access-submit');
				$('#loader').addClass('inline');
				show('loader');
			});
	});
</script>