<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p><%= f.label :email %> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
  <%= f.email_field :email %></p>

  <p><%= f.label :password %>
  <%= f.password_field :password %></p>

  <% if devise_mapping.rememberable? -%>
    <p>&nbsp&nbsp&nbsp<%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p><%= f.submit "Login", :class => "green2" %></p>
<% end %>